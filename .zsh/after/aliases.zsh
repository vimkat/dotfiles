# Manage dotfiles repository with a simple command
alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# Folder shortcuts
alias dv='cd ~/Developer'
alias dl='cd ~/Downloads'
alias dt='cd ~/Desktop'

# Default overrides
alias vim.old='/usr/bin/vim'
alias vim='nvim'
alias vi='vim'
alias v='vi'

# Handy shorthands
alias mkdir='mkdir -p'
alias cat='bat'
alias rimraf='rm -rf'
